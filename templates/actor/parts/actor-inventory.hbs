<ol class="items-list inventory-list">
{{#each actorItems as |section sid| }}
    <li class="item-header flexrow">
        <h3 class="item-name flexrow"> {{localize sid}}</h3>
        <div class="item-detail item-weight"> {{localize "ELITYAWORLD.Weight"}}</div>
    </li>

    <ol class="item-list">
        {{#each section as |item iid|}}
            <li class="item flexrow {{section.css}}"
            {{#if section.editableName}} data-item-index="{{iid}}"{{else}}data-item-id="{{item._id}}"{{/if}}>
                <div class="item-name flexrow">
                    <div class="item-image" tabindex="0" role="button" aria-label="{{item.name}}" style="background-image: url('{{item.img}}')"></div>
                    <h4>
                        {{item.name}} {{item.system.quantity}}
                    </h4>
                </div>
                <div class="item-detail item-weight">
                    <div class="item-detail">
                        {{item.system.weight}}
                    </div>
                </div>
            </li>
        {{/each}}
    </ol>


{{/each}}
</ol>